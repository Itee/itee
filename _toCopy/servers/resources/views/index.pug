doctype html
html(lang='en')

    head
        base(href='../../../')
        title Caiman
        meta(charset='utf-8')

        style(type="text/css").
            .align-center {
                text-align: center;
            }

            .model-drop-down-inputs label {
                min-width: 120px;
            }

            .input-group-text {
                min-width: 120px;
            }

            .drop-area {
                margin: 15px;
                border: 1px solid white;
                border-radius: 5px;
            }

            .drop-area:hover {
                box-shadow: inset 0px 0px 10px 0px #34cdf9;
            }


        if env == "production"
            link(rel='stylesheet', type='text/css', href='resources/styles/style.min.css')
        else
            link(rel='stylesheet', type='text/css', href='resources/styles/itee-client.style.css')
            link(rel='stylesheet', type='text/css', href='resources/styles/bootstrap.css')

    body
        div#itee-application-root
            router-view

    if _config_
        script.
            var IteeQueryConfig = JSON.parse( !{JSON.stringify( _config_ )} )
    else
        script.
            var IteeQueryConfig = null

    if env == "production"
        if _standAloneApp_
            script(src='resources/scripts/itee-client.iife.min.js', type='text/javascript')
        script(src='resources/applications/' + _app_ + '.iife.min.js', type='application/javascript')
    else
        if _standAloneApp_
            script(src='resources/scripts/itee-client.iife.js', type='text/javascript')
        script(src='resources/applications/' + _app_ + '.iife.js', type='application/javascript')
